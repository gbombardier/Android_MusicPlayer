<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35"
        android:fontFamily="cursive"
        android:gravity="bottom|center_horizontal"
        android:text="Lecteur de Musique "
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/txtSuggestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35"
        android:fontFamily="cursive"
        android:gravity="bottom|center_horizontal"
        android:text="Commencez votre Ã©coute avec "
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imgAcceuil"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:src="@drawable/jdugas"
        android:layout_weight="5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
    </ImageView>

    <TextView
        android:id="@+id/txtActions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="cursive"
        android:gravity="bottom|center"
        android:text="Choisissez une option dans le menu"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <include
            layout="@layout/layout_controles" />
    </LinearLayout>

</LinearLayout>