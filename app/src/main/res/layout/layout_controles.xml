<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/homeicon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/layout_border"/>

        <ImageView
            android:id="@+id/buttonArtistes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/artist_icon2"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/layout_border"/>

        <ImageView
            android:id="@+id/buttonPlaying"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/lectureicon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/layout_border"/>

        <ImageView
            android:id="@+id/buttonChansons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/song_icon"
            android:scaleType="fitCenter"
            android:background="@drawable/layout_border"/>

        <ImageView
            android:id="@+id/buttonListes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/liste_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/layout_border"/>
    </LinearLayout>
</LinearLayout>